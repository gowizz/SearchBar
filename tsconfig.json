{
  "compilerOptions": {
    "outDir": "lib",
    "allowJs": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "pretty": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "diagnostics": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true
  },
  "include": ["src/*", "src/**/*"],
  "exclude": ["node_modules"]
}
